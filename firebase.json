{
  "hosting": {
    "public": "dist/eduard-kvak-portfolio/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/assets/pdf/Resumé - Eduard Kvak.pdf",
        "headers": [
          {
            "key": "Content-Disposition",
            "value": "inline; filename=\"Resumé - Eduard Kvak.pdf\""
          },
          {
            "key": "Content-Type",
            "value": "application/pdf"
          }
        ]
      }
    ]
  }
}
